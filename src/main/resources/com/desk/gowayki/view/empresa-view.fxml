<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.desk.gowayki.controller.EmpresaController">

    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <Label text="Empresas" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TableView fx:id="empresaTable" prefHeight="250.0">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60.0"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180.0"/>
                    <TableColumn fx:id="colRuc" text="RUC" prefWidth="120.0"/>
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120.0"/>
                </columns>
            </TableView>

            <VBox spacing="5.0">
                <Label text="Formulario"/>

                <HBox spacing="5.0">
                    <Label text="Nombre:" prefWidth="70.0"/>
                    <TextField fx:id="nombreField" HBox.hgrow="ALWAYS"/>
                </HBox>

                <HBox spacing="5.0">
                    <Label text="RUC:" prefWidth="70.0"/>
                    <TextField fx:id="rucField" HBox.hgrow="ALWAYS"/>
                </HBox>

                <HBox spacing="5.0">
                    <Label text="Teléfono:" prefWidth="70.0"/>
                    <TextField fx:id="telefonoField" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>

            <HBox spacing="10.0">
                <Button text="Nuevo" onAction="#onNuevo"/>
                <Button text="Guardar" onAction="#onGuardar"/>
                <Button text="Eliminar" onAction="#onEliminar"/>
                <Button text="Generar Reporte PDF" onAction="#onGenerarReporte"/>
                <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <Button text="Gestión de Rutas" onAction="#onIrRutas" prefWidth="150.0"/>
            <Button text="Volver a Búsqueda" onAction="#onVolver" prefWidth="150.0"/>
        </HBox>
    </bottom>

</BorderPane>

