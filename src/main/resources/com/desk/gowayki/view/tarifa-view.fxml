<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.desk.gowayki.controller.TarifaController">

    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets top="15.0" right="15.0" bottom="10.0" left="15.0"/>
            </padding>
            <Label fx:id="rutaLabel" text="Tarifa" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15.0">
            <padding>
                <Insets top="20.0" right="15.0" bottom="20.0" left="15.0"/>
            </padding>

            <VBox spacing="10.0">
                <Label text="Tarifas" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                
                <HBox spacing="5.0">
                    <Label text="Tarifa DÃ­a:" prefWidth="120.0"/>
                    <TextField fx:id="tarifaDiaField" prefWidth="150.0" promptText="Ej: 1.50"/>
                </HBox>

                <HBox spacing="5.0">
                    <Label text="Tarifa Noche:" prefWidth="120.0"/>
                    <TextField fx:id="tarifaNocheField" prefWidth="150.0" promptText="Ej: 2.00"/>
                </HBox>
            </VBox>

            <VBox spacing="10.0">
                <Label text="Horario Nocturno" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                
                <HBox spacing="5.0">
                    <Label text="Hora Inicio:" prefWidth="120.0"/>
                    <TextField fx:id="horaInicioField" prefWidth="150.0" promptText="HH:mm"/>
                </HBox>

                <HBox spacing="5.0">
                    <Label text="Hora Fin:" prefWidth="120.0"/>
                    <TextField fx:id="horaFinField" prefWidth="150.0" promptText="HH:mm"/>
                </HBox>
            </VBox>

            <HBox spacing="10.0">
                <Button text="Guardar" onAction="#onGuardar"/>
                <Button text="Eliminar" onAction="#onEliminar"/>
                <Button text="Generar Reporte PDF" onAction="#onGenerarReporte"/>
                <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <Button text="Volver a Rutas" onAction="#onVolver" prefWidth="150.0"/>
        </HBox>
    </bottom>

</BorderPane>

