<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.desk.gowayki.controller.BusquedaRutasController">

    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets top="15.0" right="15.0" bottom="10.0" left="15.0"/>
            </padding>
            <Label text="GoWayki - Búsqueda de Rutas" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15.0">
            <padding>
                <Insets top="10.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>

            <VBox spacing="10.0">
                <Label text="Buscar Rutas" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <HBox spacing="10.0">
                    <VBox spacing="5.0">
                        <Label text="Origen:"/>
                        <TextField fx:id="origenField" prefWidth="200.0" promptText="Ej: Paucarpata"/>
                    </VBox>
                    <VBox spacing="5.0">
                        <Label text="Destino:"/>
                        <TextField fx:id="destinoField" prefWidth="200.0" promptText="Ej: Cayma"/>
                    </VBox>
                    <VBox spacing="5.0">
                        <Label text="Hora (opcional):"/>
                        <TextField fx:id="horaField" prefWidth="120.0" promptText="HH:mm"/>
                    </VBox>
                    <VBox spacing="5.0">
                        <Label text=" "/>
                        <Button text="Buscar" onAction="#onBuscar" prefWidth="100.0"/>
                    </VBox>
                </HBox>
            </VBox>

            <VBox spacing="5.0">
                <Label text="Resultados:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableView fx:id="resultadosTable" prefHeight="300.0">
                    <columns>
                        <TableColumn fx:id="colRuta" text="Ruta" prefWidth="200.0"/>
                        <TableColumn fx:id="colEmpresa" text="Empresa" prefWidth="180.0"/>
                        <TableColumn fx:id="colOrigen" text="Origen" prefWidth="120.0"/>
                        <TableColumn fx:id="colDestino" text="Destino" prefWidth="120.0"/>
                        <TableColumn fx:id="colHoraSalida" text="Hora Salida" prefWidth="100.0"/>
                        <TableColumn fx:id="colHoraLlegada" text="Hora Llegada" prefWidth="100.0"/>
                        <TableColumn fx:id="colTarifa" text="Tarifa" prefWidth="80.0"/>
                    </columns>
                </TableView>
            </VBox>

            <HBox spacing="10.0">
                <Button text="Generar Reporte PDF" onAction="#onGenerarReporte"/>
                <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <Button text="Gestión de Empresas" onAction="#onIrEmpresas" prefWidth="150.0"/>
            <Button text="Gestión de Rutas" onAction="#onIrRutas" prefWidth="150.0"/>
        </HBox>
    </bottom>

</BorderPane>

