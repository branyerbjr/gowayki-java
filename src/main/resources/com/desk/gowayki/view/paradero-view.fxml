<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.desk.gowayki.controller.ParaderoController">

    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets top="15.0" right="15.0" bottom="10.0" left="15.0"/>
            </padding>
            <Label fx:id="rutaLabel" text="Paraderos" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10.0" right="15.0" bottom="10.0" left="15.0"/>
            </padding>

            <TableView fx:id="paraderoTable" prefHeight="250.0">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50.0"/>
                    <TableColumn fx:id="colOrden" text="Orden" prefWidth="60.0"/>
                    <TableColumn fx:id="colNombre" text="Nombre Paradero" prefWidth="300.0"/>
                </columns>
            </TableView>

            <VBox spacing="5.0">
                <Label text="Formulario"/>
                <HBox spacing="5.0">
                    <Label text="Orden:" prefWidth="80.0"/>
                    <Spinner fx:id="ordenSpinner" prefWidth="100.0" min="1" max="100" initialValue="1"/>
                </HBox>
                <HBox spacing="5.0">
                    <Label text="Nombre:" prefWidth="80.0"/>
                    <TextField fx:id="nombreField" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>

            <HBox spacing="10.0">
                <Button text="Nuevo" onAction="#onNuevo"/>
                <Button text="Guardar" onAction="#onGuardar"/>
                <Button text="Eliminar" onAction="#onEliminar"/>
                <Button text="Generar Reporte PDF" onAction="#onGenerarReporte"/>
                <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <Button text="Volver a Rutas" onAction="#onVolver" prefWidth="150.0"/>
        </HBox>
    </bottom>

</BorderPane>

